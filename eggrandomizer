	frame.Visible = false
	local restore = Instance.new("TextButton", gui)
	restore.Text = "‚è´"
	restore.Size = UDim2.new(0, 40, 0, 40)
	restore.Position = UDim2.new(0.5, -20, 0.9, 0)
