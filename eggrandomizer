lk.Text = "K"

local bb = Instance.new("Frame", lf)
bb.Size = UDim2.new(0.8, 0, 0.12, 0)
bb.Position = UDim2.new(0.1, 0, 0.75, 0)
bb.BackgroundColor3 = Color3.fromRGB(50, 50, 50)

local bf = Instance.new("Frame", bb)
bf.Size = UDim2.new(0, 0, 1, 0)
bf.BackgroundColor3 = Color3.fromRGB(0, 170, 255)

task.spawn(function()
  local h = 0
  while lg.Parent do
    lk.TextColor3 = Color3.fromHSV(h, 1, 1)
    h = (h + 0.01) % 1
    RunService.RenderStepped:Wait()
  end
end)

task.spawn(function()
  local d = 10
  local s = tick()
  while tick() - s < d do
    bf.Size = UDim2.new((tick() - s) / d, 0, 1, 0)
    RunService.RenderStepped:Wait()
  end
  bf.Size = UDim2.new(1, 0, 1, 0)
  lg:Destroy()
  gui.Enabled = true -- 🔥 show GUI AFTER loading
end)
