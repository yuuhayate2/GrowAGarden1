-- Grow A Garden | Egg-Only Pet ESP with Full Hatch Chances
-- Pet Predictor by Kuni

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local PlayerGui = Players.LocalPlayer:WaitForChild("PlayerGui")

-- Hatch chances (corrected total = 100%)
local eggToPets = {
  ["Common Egg"] = {
    {name="Golden Lab", chance=33.33},
    {name="Dog", chance=33.33},
    {name="Bunny", chance=33.34},
  },
  ["Uncommon Egg"] = {
    {name="Black Bunny", chance=25},
    {name="Chicken", chance=25},
    {name="Cat", chance=25},
    {name="Deer", chance=25},
  },
  ["Rare Egg"] = {
    {name="Orange Tabby", chance=30},
    {name="Spotted Deer", chance=25},
    {name="Pig", chance=20},
    {name="Rooster", chance=15},
    {name="Monkey", chance=10},
  },
  ["Legendary Egg"] = {
    {name="Cow", chance=40},
    {name="Silver Monkey", chance=35},
    {name="Sea Otter", chance=15},
    {name="Turtle", chance=5},
    {name="Polar Bear", chance=5},
  },
  ["Mythical Egg"] = {
    {name="Grey Mouse", chance=34},
    {name="Brown Mouse", chance=30},
    {name="Squirrel", chance=25},
    {name="Red Giant Ant", chance=8},
    {name="Red Fox", chance=3},
  },
  ["Bug Egg"] = {
    {name="Snail", chance=40},
    {name="Giant Ant", chance=30},
    {name="Caterpillar", chance=20},
    {name="Praying Mantis", chance=8},
    {name="Dragonfly", chance=2},
  },
  ["Paradise Egg"] = {
