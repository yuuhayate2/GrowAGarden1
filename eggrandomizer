-- Pet Predictor by Kuni with Loading Screen

local Players = game:GetService("Players")
local CollectionService = game:GetService("CollectionService")
local TweenService = game:GetService("TweenService")
local player = Players.LocalPlayer
local PlayerGui = player:WaitForChild("PlayerGui")

-- LOADING SCREEN
local loadingGui = Instance.new("ScreenGui", PlayerGui)
loadingGui.Name = "KuniLoadingScreen"
loadingGui.IgnoreGuiInset = true
loadingGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

local loadingFrame = Instance.new("Frame", loadingGui)
loadingFrame.Size = UDim2.new(0, 320, 0, 120)
loadingFrame.Position = UDim2.new(0.5, -160, 0.5, -60)
loadingFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
loadingFrame.BorderSizePixel = 0
Instance.new("UICorner", loadingFrame).CornerRadius = UDim.new(0, 12)

local title = Instance.new("TextLabel", loadingFrame)
title.Size = UDim2.new(1, 0, 0.6, 0)
title.Position = UDim2.new(0, 0, 0, 0)
title.BackgroundTransparency = 1
title.Text = "Pet Predictor by Kuni"
title.Font = Enum.Font.FredokaOne
title.TextScaled = true
title.TextColor3 = Color3.new(1, 1, 1)

local progressBarBg = Instance.new("Frame", loadingFrame)
progressBarBg.Size = UDim2.new(1, -20, 0, 20)
progressBarBg.Position = UDim2.new(0, 10, 1, -30)
progressBarBg.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
progressBarBg.BorderSizePixel = 0
Instance.new("UICorner", progressBarBg).CornerRadius = UDim.new(0, 8)

local progressBar = Instance.new("Frame", progressBarBg)
progressBar.Size = UDim2.new(0, 0, 1, 0)
progressBar.BackgroundColor3 = Color3.fromRGB(110, 196, 99)
progressBar.BorderSizePixel = 0
Instance.new("UICorner", progressBar).CornerRadius = UDim.new(0, 8)
progressBar.Parent = progressBarBg

TweenService:Create(progressBar, TweenInfo.new(10, Enum.EasingStyle.Linear), {
    Size = UDim2.new(1, 0, 1, 0)
}):Play()

-- WAIT THEN LOAD ACTUAL SCRIPT
task.delay(10, function()
    loadingGui:Destroy()

    -- Paste the full GUI and ESP script here
    loadstring(game:HttpGet("https://raw.githubusercontent.com/Devluatech/Egg-Predictor-By-Kuny/main/eggpredictor.lua"))()
end)