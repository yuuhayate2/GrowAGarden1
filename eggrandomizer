-- Grow A Garden | Egg-Only Pet ESP (Cartoon Theme)
-- by ChatGPT

local Players = game:GetService("Players")
local PlayerGui = Players.LocalPlayer:WaitForChild("PlayerGui")

-- ü•ö Wiki Egg-to-Pet Table
local eggToPets = {
    ["Common Egg"]     = {"Dog", "Golden Lab", "Bunny"},
    ["Uncommon Egg"]   = {"Black Bunny", "Cat", "Chicken", "Deer"},
    ["Rare Egg"]       = {"Monkey", "Orange Tabby", "Pig", "Rooster", "Spotted Deer"},
    ["Legendary Egg"]  = {"Cow", "Silver Monkey", "Sea Otter", "Turtle", "Polar Bear"},
    ["Mythical Egg"]   = {"Grey Mouse", "Brown Mouse", "Squirrel", "Red Giant Ant", "Red Fox"},
    ["Bug Egg"]        = {"Snail", "Giant Ant", "Caterpillar", "Praying Mantis", "Dragonfly"},
    ["Bee Egg"]        = {"Bee", "Honey Bee", "Bear Bee", "Petal Bee", "Queen Bee"},
    ["Paradise Egg"]   = {"Ostrich", "Peacock", "Capybara", "Scarlet Macaw", "Mimic Octopus"},
    ["Oasis Egg"]      = {"Meerkat", "Sand Snake", "Axolotl", "Hyacinth Macaw"},
}

local espList = {}
local espEnabled = false

local function clearESP()
    for _, gui in pairs(espList) do
        if gui and gui.Parent then
            gui:Destroy()
        end
    end
    espList = {}
end

local function createESP(part, petName)
    if part and not part:FindFirstChild("EggESP") then
        local gui = Instance.new("BillboardGui", part)
        gui.Name = "EggESP"
        gui.Size = UDim2.new(0, 120, 0, 50)
        gui.StudsOffset = Vector3.new(0, 2.5, 0)
        gui.AlwaysOnTop = true
        gui.Parent = part

        local label = Instance.new("TextLabel", gui)
        label.Size = UDim2.new(1, 0, 1, 0)
        label.BackgroundTransparency = 1
        label.Text = petName
        label.TextColor3 = Color3.fromRGB(255, 215, 85)  -- Yellowish color to give it a friendly look
        label.TextStrokeTransparency = 0.3
        label.Font = Enum.Font.Cartoon
        label.TextScaled = true
        label.TextStrokeTransparency = 0.5

        table.insert(espList, gui)
    end
end

local function getRandomPet(eggName)
    local pool = eggToPets[eggName]
    if pool then
        return pool[math.random(1, #pool)]
    end
    return "Unknown"
end

-- üîç ESP on hatchable eggs only
local function scanHatchableEggs()
    clearESP()
    for _, obj in ipairs(workspace:GetDescendants()) do
        if obj:IsA("Model") and obj:GetAttribute("READY") == true then
            local eggName = obj:GetAttribute("EggName")
            local part = obj:FindFirstChildWhichIsA("BasePart")
            if eggName and eggToPets[eggName] and part then
                createESP(part, getRandomPet(eggName))
            end
        end
    end
end

-- üîÄ Random ESP on all known eggs
local function randomizeEggs()
    clearESP()
    for _, obj in ipairs(workspace:GetDescendants()) do
        if obj:IsA("Model") and eggToPets[obj.Name] then
            local part = obj:FindFirstChildWhichIsA("BasePart")
            if part then
                createESP(part, getRandomPet(obj.Name))
            end
        end
    end
end

-- üß≠ GUI Setup
local gui = Instance.new("ScreenGui", PlayerGui)
gui.Name = "EggESP_UI"

local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 200, 0, 150)
frame.Position = UDim2.new(0.01, 0, 0.35, 0)
frame.BackgroundColor3 = Color3.fromRGB(255, 180, 50)  -- Bright yellow-orange background
frame.BorderSizePixel = 0
frame.Active = true
frame.Draggable = true
local frameCorner = Instance.new("UICorner", frame)  -- Rounded corners for frame
frameCorner.CornerRadius = UDim.new(0, 16)

local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, 0, 0.25, 0)
title.BackgroundTransparency = 1
title.Text = "Egg Predictor by Kuni"
title.TextColor3 = Color3.fromRGB(255, 85, 85)  -- Friendly, red color for the title
title.Font = Enum.Font.Cartoon
title.TextSize = 22
title.TextStrokeTransparency = 0.4

local toggleBtn = Instance.new("TextButton", frame)
toggleBtn.Size = UDim2.new(0.9, 0, 0.3, 0)
toggleBtn.Position = UDim2.new(0.05, 0, 0.3, 0)
toggleBtn.Text = "Toggle Pet Predictor"
toggleBtn.BackgroundColor3 = Color3.fromRGB(0, 255, 150)  -- Bright green for a friendly button
toggleBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
toggleBtn.Font = Enum.Font.Cartoon
toggleBtn.TextSize = 16
local toggleBtnCorner = Instance.new("UICorner", toggleBtn)  -- Rounded corners for button
toggleBtnCorner.CornerRadius = UDim.new(0, 8)

local randomBtn = Instance.new("TextButton", frame)
randomBtn.Size = UDim2.new(0.9, 0, 0.3, 0)
randomBtn.Position = UDim2.new(0.05, 0, 0.65, 0)
randomBtn.Text = "Randomize Pet Accurate"
randomBtn.BackgroundColor3 = Color3.fromRGB(80, 180, 255)  -- Light blue for the randomize button
randomBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
randomBtn.Font = Enum.Font.Cartoon
randomBtn.TextSize = 16
local randomBtnCorner = Instance.new("UICorner", randomBtn)  -- Rounded corners for random button
randomBtnCorner.CornerRadius = UDim.new(0, 8)

-- üîò Buttons
local running = false
toggleBtn.MouseButton1Click:Connect(function()
    espEnabled = not espEnabled
    toggleBtn.Text = espEnabled and "ESP: ON" or "ESP: OFF"

    if espEnabled then
        running = true
        task.spawn(function()
            while running and espEnabled do
                scanHatchableEggs()
                task.wait(5)
            end
        end)
    else
        running = false
        clearESP()
    end
end)

randomBtn.MouseButton1Click:Connect(function()
    espEnabled = false
    running = false
    toggleBtn.Text = "ESP: OFF"
    randomizeEggs()
end)
