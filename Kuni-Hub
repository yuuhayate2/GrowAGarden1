-- Pet Spawner by Kuni | Dark Mode GUI

local Players = game:GetService("Players")
local Player = Players.LocalPlayer
local PlayerGui = Player:WaitForChild("PlayerGui")

-- GUI Setup
local screenGui = Instance.new("ScreenGui", PlayerGui)
screenGui.Name = "KuniPetSpawner"
screenGui.ResetOnSpawn = false

-- Main Frame
local mainFrame = Instance.new("Frame", screenGui)
mainFrame.Size = UDim2.new(0, 450, 0, 280)
mainFrame.Position = UDim2.new(0.5, -225, 0.5, -140)
mainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
mainFrame.Active = true
mainFrame.Draggable = true
Instance.new("UICorner", mainFrame).CornerRadius = UDim.new(0, 10)

-- Title
local title = Instance.new("TextLabel", mainFrame)
title.Size = UDim2.new(1, 0, 0, 40)
title.Position = UDim2.new(0, 0, 0, 0)
title.BackgroundTransparency = 1
title.Text = "Pet Spawner by Kuni"
title.Font = Enum.Font.GothamBold
title.TextColor3 = Color3.new(1, 1, 1)
title.TextSize = 18

-- Function to create input field
local function createInput(parent, labelText, placeholderText, yPos)
	local label = Instance.new("TextLabel", parent)
	label.Text = labelText
	label.Position = UDim2.new(0, 30, 0, yPos)
	label.Size = UDim2.new(0, 100, 0, 25)
	label.Font = Enum.Font.Code
	label.TextColor3 = Color3.fromRGB(220, 220, 220)
	label.BackgroundTransparency = 1
	label.TextSize = 13
	label.TextXAlignment = Enum.TextXAlignment.Left

	local box = Instance.new("TextBox", parent)
	box.PlaceholderText = placeholderText
	box.Text = ""
	box.Position = UDim2.new(0, 30, 0, yPos + 25)
	box.Size = UDim2.new(0, 390, 0, 30)
	box.Font = Enum.Font.Code
	box.TextSize = 13
	box.TextColor3 = Color3.new(1, 1, 1)
	box.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
	box.ClearTextOnFocus = false
	Instance.new("UICorner", box).CornerRadius = UDim.new(0, 6)
	
	return box
end

-- Inputs
local petInput = createInput(mainFrame, "Pet", "Enter pet name", 50)
local weightInput = createInput(mainFrame, "Pet Weight", "Enter weight", 110)
local ageInput = createInput(mainFrame, "Pet Age", "Enter age", 170)

-- Spawn Button
local spawnBtn = Instance.new("TextButton", mainFrame)
spawnBtn.Text = "Spawn"
spawnBtn.Position = UDim2.new(0, 30, 0, 230)
spawnBtn.Size = UDim2.new(0, 390, 0, 35)
spawnBtn.Font = Enum.Font.GothamBold
spawnBtn.TextSize = 14
spawnBtn.TextColor3 = Color3.new(1, 1, 1)
spawnBtn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
Instance.new("UICorner", spawnBtn).CornerRadius = UDim.new(0, 6)

-- Spawn Function (Visual Only)
spawnBtn.MouseButton1Click:Connect(function()
	local petName = petInput.Text
	local petWeight = tonumber(weightInput.Text) or 1
	local petAge = tonumber(ageInput.Text) or 1

	local part = Instance.new("Part", workspace)
	part.Name = petName
	part.Size = Vector3.new(3, 2, 3)
	part.Anchored = true
	part.Position = Player.Character.HumanoidRootPart.Position + Vector3.new(0, 5, -5)
	part.BrickColor = BrickColor.Random()

	local billboard = Instance.new("BillboardGui", part)
	billboard.Size = UDim2.new(0, 200, 0, 50)
	billboard.StudsOffset = Vector3.new(0, 2, 0)
	billboard.AlwaysOnTop = true

	local label = Instance.new("TextLabel", billboard)
	label.Size = UDim2.new(1, 0, 1, 0)
	label.BackgroundTransparency = 1
	label.TextColor3 = Color3.new(1, 1, 1)
	label.TextStrokeTransparency = 0
	label.Font = Enum.Font.GothamBold
	label.TextSize = 14
	label.Text = petName .. " [" .. string.format("%.2f", petWeight) .. " KG] [Age " .. petAge .. "]"
end)
