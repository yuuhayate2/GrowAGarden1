-- Kuni Hub | Full Visual Pet Spawner with Realistic Models & Movement -- Models: Raccoon, Mimic Octopus, Butterfly, Disco Bee, Queen Bee, Dragonfly, Fennec Fox, Red Fox, T-Rex -- Visual-only, flying/walking effects, sounds, sparkle trails

local Players = game:GetService("Players") local TweenService = game:GetService("TweenService") local RunService = game:GetService("RunService") local player = Players.LocalPlayer local character = player.Character or player.CharacterAdded:Wait()

local PetModels = { ["Raccoon"] = "rbxassetid://18534285876", ["Mimic Octopus"] = "rbxassetid://18534293551", ["Butterfly"] = "rbxassetid://18534294465", ["Disco Bee"] = "rbxassetid://18534296182", ["Queen Bee"] = "rbxassetid://18534297609", ["Dragonfly"] = "rbxassetid://18534299344", ["Fennec Fox"] = "rbxassetid://18534300813", ["Red Fox"] = "rbxassetid://18534302538", ["T-Rex"] = "rbxassetid://18534303852", }

local gui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui")) gui.Name = "KuniSpawner"

local frame = Instance.new("Frame", gui) frame.Size = UDim2.new(0, 300, 0, 180) frame.Position = UDim2.new(0.05, 0, 0.4, 0) frame.BackgroundColor3 = Color3.fromRGB(30,30,30) frame.Active = true frame.Draggable = true Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 12)

local title = Instance.new("TextLabel", frame) title.Text = "Pet Spawner by Kuni" title.Size = UDim2.new(1, 0, 0, 40) title.TextColor3 = Color3.fromRGB(255,255,255) title.BackgroundTransparency = 1 title.Font = Enum.Font.GothamBold title.TextSize = 22

local input = Instance.new("TextBox", frame) input.PlaceholderText = "Enter pet name (e.g. Raccoon)" input.Size = UDim2.new(1, -20, 0, 35) input.Position = UDim2.new(0, 10, 0, 50) input.Font = Enum.Font.Gotham input.TextColor3 = Color3.new(1, 1, 1) input.BackgroundColor3 = Color3.fromRGB(40, 40, 40) input.TextSize = 18 input.ClearTextOnFocus = false

local button = Instance.new("TextButton", frame) button.Text = "Spawn Pet" button.Size = UDim2.new(1, -20, 0, 40) button.Position = UDim2.new(0, 10, 0, 100) button.BackgroundColor3 = Color3.fromRGB(50, 130, 200) button.Font = Enum.Font.GothamBold button.TextColor3 = Color3.new(1, 1, 1) button.TextSize = 20

local function createEffect(part, flying) local effect = Instance.new("ParticleEmitter") effect.Texture = "rbxassetid://48384130" effect.Size = NumberSequence.new(0.3) effect.Rate = 15 effect.Speed = NumberRange.new(0.5) effect.LightEmission = 0.7 effect.Parent = part

if flying then
    local float = 0
    RunService.RenderStepped:Connect(function()
        if part and part:IsDescendantOf(workspace) then
            float += 0.05
            part.Position = part.Position + Vector3.new(0, math.sin(float)*0.05, 0)
        end
    end)
end

end

local function spawnPet(petName) local assetId = PetModels[petName] if not assetId then warn("Invalid pet name") return end

local model = game:GetObjects(assetId)[1]
if not model then warn("Model failed to load") return end

model.Name = petName
model.Parent = workspace
model.PrimaryPart = model.PrimaryPart or model:FindFirstChildWhichIsA("BasePart")

local root = character.PrimaryPart.Position + Vector3.new(0, 2, 0)
model:SetPrimaryPartCFrame(CFrame.new(root))

local isFlying = (petName:lower():find("bee") or petName == "Butterfly" or petName == "Dragonfly")
createEffect(model.PrimaryPart, isFlying)

if isFlying then
    local sound = Instance.new("Sound", model.PrimaryPart)
    sound.SoundId = "rbxassetid://9118823103"
    sound.Looped = true
    sound.Volume = 0.4
    sound:Play()
else
    local sound = Instance.new("Sound", model.PrimaryPart)
    sound.SoundId = "rbxassetid://9118827881"
    sound.Looped = true
    sound.Volume = 0.3
    sound:Play()
end

-- Movement loop
coroutine.wrap(function()
    while model and model.Parent do
        local target = root + Vector3.new(math.random(-15,15), 0, math.random(-15,15))
        TweenService:Create(model.PrimaryPart, TweenInfo.new(2), {CFrame = CFrame.new(target)}):Play()
        wait(2.2)
    end
end)()

end

button.MouseButton1Click:Connect(function() local name = input.Text spawnPet(name) end)

