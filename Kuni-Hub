-- ESP + Predictor (Part 2)

local espList = {}

local function clearESP()
  for _, g in ipairs(espList) do if g and g.Parent then g:Destroy() end end
  espList = {}
end

local function createESP(part, petDisplay)
  if part and not part:FindFirstChild("EggESP") then
    local gui = Instance.new("BillboardGui", part)
    gui.Name = "EggESP"
    gui.Size = UDim2.new(0, 100, 0, 40)
    gui.StudsOffset = Vector3.new(0, 2.5, 0)
    gui.AlwaysOnTop = true

    local lb = Instance.new("TextLabel", gui)
    lb.Size = UDim2.new(1, 0, 1, 0)
    lb.BackgroundTransparency = 1
    lb.Text = petDisplay
    lb.TextColor3 = Color3.new(1,1,1)
    lb.TextStrokeTransparency = 0.2
    lb.Font = Enum.Font.Gotham
    lb.TextScaled = true
    lb.TextTransparency = 1

    TweenService:Create(lb, TweenInfo.new(1), {TextTransparency = 0}):Play()
    table.insert(espList, gui)
  end
end

local function getRandomPet(eggName)
  local pool = eggToPets[eggName]
  if pool then
    local total, cum = 0, 0
    for _, p in ipairs(pool) do total += p.chance end
    local r = math.random() * total
    for _, p in ipairs(pool) do
      cum += p.chance
      if r <= cum then
        return p.name.." ("..string.format("%.2f", p.chance).."%)"
      end
    end
  end
  return "Unknown"
end

local function randomizeEggs()
  clearESP()
  for _, obj in ipairs(workspace:GetDescendants()) do
    if obj:IsA("Model") and eggToPets[obj.Name] then
      local part = obj:FindFirstChildWhichIsA("BasePart")
      if part then createESP(part, getRandomPet(obj.Name)) end
    end
  end
end
-- Pet Spawner GUI (Part 3)

local gui = Instance.new("ScreenGui", PlayerGui)
gui.Name = "PetPredictorGUI"
gui.ResetOnSpawn = false

local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 320, 0, 300)
frame.Position = UDim2.new(0.02, 0, 0.3, 0)
frame.BackgroundColor3 = Color3.fromRGB(25, 25, 35)
frame.BorderColor3 = Color3.fromRGB(0, 200, 255)
frame.BorderSizePixel = 2
frame.Active = true
frame.Draggable = true

local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, 0, 0, 30)
title.Text = "Pet Predictor + Spawner"
title.BackgroundColor3 = Color3.fromRGB(0, 120, 255)
title.TextColor3 = Color3.new(1,1,1)
title.Font = Enum.Font.GothamBold
title.TextSize = 16

local predictBtn = Instance.new("TextButton", frame)
predictBtn.Size = UDim2.new(0.9, 0, 0, 30)
predictBtn.Position = UDim2.new(0.05, 0, 0, 40)
predictBtn.Text = "🎯 Predict Pets"
predictBtn.BackgroundColor3 = Color3.fromRGB(0, 180, 255)
predictBtn.TextColor3 = Color3.new(1,1,1)
predictBtn.Font = Enum.Font.GothamBold
predictBtn.TextSize = 14
predictBtn.MouseButton1Click:Connect(function()
  predictBtn.Text = "Predicting..."
  randomizeEggs()
  task.wait(1)
  predictBtn.Text = "🎯 Predict Pets"
end)
-- Dropdown + Visual Pet Spawner (Part 4)

local divinePets = {
  "Queen Bee", "Mimic Octopus", "Dragonfly", "Raccoon", "T-Rex",
  "Red Fox", "Fennec Fox", "Brontosaurus", "Hyacinth Macaw",
  "Scarlet Macaw", "Silver Monkey"
}

local dropdown = Instance.new("Frame", frame)
dropdown.Size = UDim2.new(0.9, 0, 0, 30)
dropdown.Position = UDim2.new(0.05, 0, 0, 80)
dropdown.BackgroundColor3 = Color3.fromRGB(50, 50, 60)

local selectedPet = Instance.new("TextButton", dropdown)
selectedPet.Size = UDim2.new(1, 0, 1, 0)
selectedPet.Text = "Select Divine Pet"
selectedPet.TextScaled = true
selectedPet.Font = Enum.Font.Gotham
selectedPet.BackgroundColor3 = Color3.fromRGB(70, 70, 80)
selectedPet.TextColor3 = Color3.new(1, 1, 1)

local listFrame = Instance.new("ScrollingFrame", dropdown)
listFrame.Size = UDim2.new(1, 0, 5, 0)
listFrame.Position = UDim2.new(0, 0, 1, 0)
listFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 50)
listFrame.Visible = false
listFrame.CanvasSize = UDim2.new(0, 0, 0, #divinePets * 30)
listFrame.ScrollBarThickness = 4

for _, pet in ipairs(divinePets) do
  local btn = Instance.new("TextButton", listFrame)
  btn.Size = UDim2.new(1, 0, 0, 30)
  btn.Text = pet
  btn.BackgroundColor3 = Color3.fromRGB(60, 60, 70)
  btn.TextColor3 = Color3.new(1, 1, 1)
  btn.Font = Enum.Font.Gotham
  btn.TextScaled = true
  btn.MouseButton1Click:Connect(function()
    selectedPet.Text = pet
    listFrame.Visible = false
  end)
end

selectedPet.MouseButton1Click:Connect(function()
  listFrame.Visible = not listFrame.Visible
end)

local function spawnPetVisual(petName)
  local model = Instance.new("Model", workspace)
  model.Name = petName.." [Visual]"

  local body = Instance.new("Part", model)
  body.Size = Vector3.new(3, 3, 3)
  body.Anchored = true
  body.Position = Character.HumanoidRootPart.Position + Vector3.new(0, 2, -5)
  body.BrickColor = BrickColor.Random()

  local tag = Instance.new("BillboardGui", body)
  tag.Size = UDim2.new(0, 200, 0, 40)
  tag.StudsOffset = Vector3.new(0, 3, 0)
  tag.AlwaysOnTop = true

  local label = Instance.new("TextLabel", tag)
  label.Size = UDim2.new(1, 0, 1, 0)
  label.BackgroundTransparency = 1
  label.Text = petName.." [Held]"
  label.TextColor3 = Color3.new(1, 1, 1)
  label.TextScaled = true
  label.Font = Enum.Font.GothamBold
  label.TextStrokeTransparency = 0.2
end

local spawnBtn = Instance.new("TextButton", frame)
spawnBtn.Size = UDim2.new(0.9, 0, 0, 30)
spawnBtn.Position = UDim2.new(0.05, 0, 0, 120)
spawnBtn.Text = "🐾 Spawn Pet"
spawnBtn.BackgroundColor3 = Color3.fromRGB(100, 200, 100)
spawnBtn.TextColor3 = Color3.new(1, 1, 1)
spawnBtn.Font = Enum.Font.GothamBold
spawnBtn.TextSize = 14
spawnBtn.MouseButton1Click:Connect(function()
  local pet = selectedPet.Text
  if pet and pet ~= "Select Divine Pet" then
    spawnPetVisual(pet)
  end
end)
